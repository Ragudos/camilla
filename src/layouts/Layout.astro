---
import { SEO } from "astro-seo";
import { ClientRouter } from "astro:transitions";
import { pwaInfo } from "virtual:pwa-info";
import "@/index.css";
import Navbar from "@/components/navbar.astro";
import Footer from "@/components/footer.astro";

export interface Props {
  title?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL(
  "/meta/opengraph.png",
  Astro.site
).toString();
const { title } = Astro.props;
const makeTitle = title ? `${title} | Camilla` : "Camilla - My personal blog";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="theme-color" content="#ffffff" />

    <ClientRouter />

    <SEO
      title={makeTitle}
      description="A blog website for Camilla."
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "Camilla - My personal blog",
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Camilla Blog Homepage Screenshot",
        },
      }}
    />

    <script is:inline>
      (function () {
        function theme() {
          if (
            localStorage.theme === "dark" ||
            (!("theme" in localStorage) &&
              window.matchMedia("(prefers-color-scheme: dark)").matches)
          ) {
            document.documentElement.classList.add("dark");
          } else {
            document.documentElement.classList.remove("dark");
          }
        }

        theme();
        document.removeEventListener("astro:after-swap", theme);
        document.addEventListener("astro:after-swap", theme);
      })();
    </script>

    {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    <script src="@/pwa.ts"></script>
    <slot name="meta" />
  </head>
  <body>
    <Navbar />
    <main class="flex flex-col gap-16 justify-center items-center">
      <slot />
    </main>
    <Footer />
    <script is:inline></script>
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
