---
import { Icon } from "astro-icon/components";
import Link from "../ui/link.astro";

export interface Props {
  prevUrl?: string;
  nextUrl?: string;
  prevText?: string;
  nextText?: string;
  class?: string;
}

const {
  prevUrl,
  nextUrl,
  prevText = "Prev",
  nextText = "Next",
  class: className,
} = Astro.props;
---

{
  (prevUrl || nextUrl) && (
    <div class:list={["container flex", className]}>
      <div class="flex flex-row mx-auto container justify-center gap-8">
        <Link
          href={prevUrl || "#"}
          class={`${!prevUrl ? "invisible" : ""}`}
          style="muted"
        >
          <div class="flex flex-row align-middle">
            <Icon name="tabler:chevron-left" class="w-6 h-6" />
            <p class="ml-2">{prevText}</p>
          </div>
        </Link>
        <Link
          href={nextUrl || "#"}
          class={`${!nextUrl ? "invisible" : ""}`}
          style="muted"
        >
          <div class="flex flex-row align-middle">
            <p class="mr-2">{nextText}</p>
            <Icon name="tabler:chevron-right" class="w-6 h-6" />
          </div>
        </Link>
      </div>
    </div>
  )
}
