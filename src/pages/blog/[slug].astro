---
import Sidebar, {
  type Props as SidebarProps,
} from "@/components/blog/sidebar.astro";
import Layout from "@/layouts/Layout.astro";
import { getArticleReadingTime } from "@/utils/blog";
import type { GetStaticPaths } from "astro";
import { Icon } from "astro-icon/components";
import { Picture } from "astro:assets";
import { getImage } from "astro:assets";
import { getCollection } from "astro:content";

export const getStaticPaths = (async () => {
  const blogEntries = await getCollection("blog");

  return blogEntries.map((post) => {
    return {
      params: { slug: post.id },
      props: { post },
    };
  });
}) satisfies GetStaticPaths;

const { post } = Astro.props;
const { data, rendered } = post;
const readTime = getArticleReadingTime(post.body || "");
---

<Layout title={post.data.title}>
  <section class="container">
    <nav></nav>
  </section>
  <article class="relative container">
    <header
      class="mb-14 tablet:mb-16 flex flex-col items-center justify-center text-center"
    >
      <div>
        <span class="sr-only">Tags</span>
        <ul class="flex">
          {
            data.tags.map((tag) => {
              return (
                <li class="bg-brand-softer border border-brand-subtle text-fg-brand-strong text-xs font-medium px-1.5 py-0.5 rounded-full">
                  {tag}
                </li>
              );
            })
          }
        </ul>
      </div>
      <h1
        class="break-all hyphens-auto text-7xl mb-6 tablet:text-9xl tablet:mb-8 font-bold"
      >
        {data.title}
      </h1>
      <section
        class="mb-10 tablet:mb-12 flex flex-wrap items-center justify-center gap-2 text-muted dark:text-gray-500"
      >
        <span>{readTime} minute/s read</span>
        <svg
          viewBox="0 0 2 2"
          class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50"
        >
          <circle cx="1" cy="1" r="1"></circle>
        </svg>
        <time datetime={data.publishDate.toISOString()}>
          {
            data.publishDate.toLocaleDateString("en-US", {
              month: "long",
              day: "2-digit",
              year: "numeric",
              hour: "2-digit",
              minute: "2-digit",
            })
          }
        </time>
        <svg
          viewBox="0 0 2 2"
          class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50"
        >
          <circle cx="1" cy="1" r="1"></circle>
        </svg>
        <div class="flex items-center gap-x-1">
          <Icon name="carbon:user-avatar-filled-alt" width="20" />
          {post.data.author}
        </div>
        <svg
          viewBox="0 0 2 2"
          class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50"
        >
          <circle cx="1" cy="1" r="1"></circle>
        </svg>
        <span>{data.category}</span>
      </section>
      <Picture
        src={data.image.src}
        alt={data.image.alt}
        widths={[480, 720, 1280]}
        formats={["avif", "jpg", "webp"]}
      />
    </header>

    <div
      class="flex flex-col-reverse items-center desktop:items-start desktop:flex-row desktop:justify-center gap-x-12 gap-y-4"
    >
      <aside
        class="break-all hidden desktop:inline-block desktop:max-w-[30ch] desktop:sticky desktop:top-12 desktop:h-[calc(100dvh-5rem)] desktop:overflow-y-auto"
      >
        <Sidebar
          headings={rendered?.metadata?.headings as SidebarProps["headings"]}
        />
      </aside>

      <section
        class="prose prose-lg prose-headings:hyphens-auto prose-headings:break-all desktop:prose-xl dark:prose-invert"
      >
        <p>
          {data.description}
        </p>

        <section>
          <Fragment set:html={rendered?.html.trim()} />
        </section>
      </section>
    </div>
    <footer></footer>
  </article>
</Layout>
